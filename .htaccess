# ============================================================
# Emedical Madrid - .htaccess Definitivo (LOGO FIX)
# ============================================================

Options -MultiViews
RewriteEngine On
RewriteBase /

# 1) FORZAR HTTPS Y QUITAR WWW
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteRule ^(.*)$ https://renovarcarnetdeconducirmadridbarato.com/$1 [L,R=301]

# 2) REGLA PARA RENOVAR CARNET (Caso especial)
RewriteRule ^renovar-carnet-conducir-madrid$ renovar-carnet-conducir-madrid.html [L,NC]

# 3) REGLA GENÉRICA PARA EL RESTO DE PÁGINAS (Parche Hostalia/Plesk)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/$1.html -f
RewriteRule ^(.*)$ /$1.html [L]

# ============================================================
# 4) OPTIMIZACIÓN DE RENDIMIENTO (Caché y Velocidad)
# ============================================================

<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"

  # Imágenes: 1 año de caché
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # CSS y JavaScript
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# FORZAR EL USO DE UTF-8
AddDefaultCharset UTF-8