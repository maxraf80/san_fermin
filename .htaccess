# ============================================================
# Emedical Madrid - .htaccess (SEO + URLs limpias)
# ============================================================

RewriteEngine On

# ------------------------------------------------------------
# 1) Forzar HTTPS y quitar www
# ------------------------------------------------------------
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} ^www\. [NC]
RewriteRule ^ https://renovarcarnetdeconducirmadridbarato.com%{REQUEST_URI} [L,R=301]

# ------------------------------------------------------------
# 2) Quitar barra final (excepto si es carpeta real)
#    /algo/ -> /algo
# ------------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.+)/$ $1 [L,R=301]

# ------------------------------------------------------------
# 3) Redirigir .html -> URL limpia (CANÓNICA)
#    /citas.html -> /citas
# ------------------------------------------------------------
RewriteCond %{THE_REQUEST} \s/([^.]+)\.html[\s?] [NC]
RewriteRule ^ %1 [L,R=301]

# ------------------------------------------------------------
# 4) Servir archivos .html cuando se pide la URL sin extensión
#    /citas -> citas.html (sin redirigir, URL visible limpia)
# ------------------------------------------------------------
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]

# ------------------------------------------------------------
# 5) (Opcional) Página de inicio limpia
#    /index.html -> /
# ------------------------------------------------------------
RewriteCond %{THE_REQUEST} \s/(index)\.html[\s?] [NC]
RewriteRule ^index\.html$ / [L,R=301]

# ------------------------------------------------------------
# 6) Cabeceras básicas de seguridad
# ------------------------------------------------------------
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set X-XSS-Protection "1; mode=block"
</IfModule>
